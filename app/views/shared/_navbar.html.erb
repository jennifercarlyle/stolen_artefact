<div class="navbar navbar-expand-sm navbar-dark navbar-artefact" style="background-color: $black; color: $red;">
  <div class="d-flex align-items-center">
    <%= link_to root_path, class: "navbar-brand p-3" do %>
      <%= image_tag "SA_logo3.png" %>
      <% end %>

    <div class="form-inline py-4">
      <%= form_tag artefacts_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control rounded",
        placeholder: "Search"
      %>
      <%= submit_tag "Search", class: "mr-1 ml-1 btn btn-dark rounded" %>
      <% end %>
    </div>
  </div>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
          <div class="artefacts-click">
            <%= link_to "View All Artefacts", artefacts_path %>
          </div>
        </li>

        <li class="nav-item dropdown pr-4">
            <% if current_user.photo.attached? %>
              <a class="nav-link" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown" %>
              </a>
            <% else %>
              <a class="nav-link avatar-no-image" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <%= current_user.name[0] %>
              </a>
            <% end %>

          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My Profile", user_path(current_user), class: "dropdown-item" %>
            <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>

      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
